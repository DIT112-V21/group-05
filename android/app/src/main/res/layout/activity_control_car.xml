<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlCarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/darkblue"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ControlCarActivity">

            <ImageButton
                android:id="@+id/forwardButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="598dp"
                android:layout_marginBottom="123dp"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="fitXY"
                android:src="@drawable/forward_button"
                app:layout_constraintBottom_toTopOf="@+id/backwardButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.9"
                tools:layout_editor_absoluteX="67dp"
                android:onClick="moveForward"/>

            <ImageButton
                android:id="@+id/backwardButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="598dp"
                android:layout_marginBottom="22dp"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="fitXY"
                android:src="@drawable/back_button"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="67dp"
                android:onClick="moveBackward"/>

            <ImageButton
                android:id="@+id/leftButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="149dp"
                android:layout_marginBottom="71dp"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="fitXY"
                android:src="@drawable/left_button"
                app:layout_constraintEnd_toStartOf="@+id/rightButton"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="270dp"
                android:onClick="moveForwardLeft"/>

            <ImageButton
                android:id="@+id/rightButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="fitXY"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="29dp"
                android:layout_marginBottom="71dp"
                android:src="@drawable/right_button"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="270dp"
                android:onClick="moveForwardRight"/>
        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:id="@+id/navView"
    app:headerLayout="@layout/nav_header"
    app:menu="@menu/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>